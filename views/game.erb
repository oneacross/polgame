<!DOCTYPE html>
<html>
  <head>
    <title>PolitiGame</title>
    <link rel="stylesheet" href="app.css">
  </head>

  <body>
    <div id="game">

      <div id="game_question">
        <p>Who said it?</p>
      </div>

      <div id="quote_box">
        <div id="left_quote">&ldquo;</div>
        <div id="quote">Fetching random quote from WaPo!</div>
        <div id="right_quote">&bdquo;</div>
      </div>

      <div id="answer">
        <div id="left_option"><img src="http://leslycorazon.wikispaces.com/file/view/head-silhouette-with-question-mark.png" alt="smiley"/></div>
        <div id="right_option"><img src="http://leslycorazon.wikispaces.com/file/view/head-silhouette-with-question-mark.png" alt="smiley"/></div>

        <div id="result">
          <div id="message"></div>
          <div id="more_info">
            <button type="button" id="next_button">Get New Quote</button>
          </div>
        </div>
      </div>
    </div>

    <script src="js/lib/jquery-1.8.1.js"></script>
    <script src="js/lib/underscore.js"></script>
    <script src="js/lib/backbone.js"></script>
    <script src="js/models/game.js"></script>
    <script src="js/views/game.js"></script>
    <script src="js/app.js"></script>
  </body>
</html>
